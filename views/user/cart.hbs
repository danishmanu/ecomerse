<section>
    <div class="container">
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">Items</th>

                    <th scope="col">Titles</th>
                    <th scope="col">Quantity</th>
                </tr>
            </thead>
            <tbody>
  {{#each products}}
                <tr>
{{#each this.product}}
                    <td><img src="/product-images/{{this._id}}.jpg" alt=""> </td>
                    <td>{{this.Name}}</td>
                {{/each}}
                <td>
                    <button class="cart-item-count mr-3">-</button>{{this.quantity}}<button class="cart-item-count ml-3">+</button>
                </td>
                <td>
                    <a href="" class="btn btn-danger">Remove</a>
                </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>